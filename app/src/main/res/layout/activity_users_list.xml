<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_activity_user_list_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/framelayout_activity_users_layout"
        android:layout_width="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/project_rounded_circled_blue_filled_6dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textview_activity_users_list_animated"
            android:layout_width="wrap_content"
            android:text="Нажми меня!"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_white_project"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />

        <ProgressBar
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/progressbar_activity_users_loader"
            android:foregroundTint="@color/color_white_project"
            android:progressBackgroundTint="@color/color_white_project"
            android:progressTint="@color/color_white_project"
            android:indeterminateTint="@color/color_white_project"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </FrameLayout>

</RelativeLayout>